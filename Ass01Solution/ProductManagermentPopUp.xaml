<Window x:Class="Ass01Solution.ProductManagermentPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
        xmlns:local="clr-namespace:Ass01Solution"
        mc:Ignorable="d"
        Title="ProductManagermentPopUp" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <StackPanel>
            <Label x:Name="lb_Product">Add/Update</Label>
            <Label>Product Id:</Label>
            <TextBox x:Name="txtProductId"></TextBox>
            <Label>Category Id</Label>
            <TextBox x:Name="txtCategoryId"></TextBox>
            <Label>Product Name</Label>
            <TextBox x:Name="txtProductName"></TextBox>
            <Label>weight</Label>
            <TextBox x:Name="txtWeight"></TextBox>
            <Label>Unit Price</Label>
            <TextBox x:Name="txtUnitPrice"></TextBox>
            <Label>UnitslnStock</Label>
            <TextBox x:Name="txtUnitslnStock"></TextBox>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btn_Product" Click="btn_Product_Click" >Add/Update</Button>
                <Button x:Name="btn_Close" Click="btn_Close_Click" >Close</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
