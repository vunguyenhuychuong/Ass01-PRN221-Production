<Window x:Class="Ass01Solution.OrderManagementPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ass01Solution"
        mc:Ignorable="d"
        Title="OrderManagementPopUp" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label x:Name="lb_Order">Add/Update</Label>
            <Label>Order Id:</Label>
            <TextBox x:Name="txtOrderId"></TextBox>
            <Label>Member Id</Label>
            <TextBox x:Name="txtMemberId"></TextBox>
            <Label>Order Date</Label>
            <TextBox x:Name="txtOrderDate"></TextBox>
            <Label>Required Date</Label>
            <TextBox x:Name="txtRequiredDate"></TextBox>
            <Label>Shipped Date</Label>
            <TextBox x:Name="txtShippedDate"></TextBox>
            <Label>Freight</Label>
            <TextBox x:Name="txtFreight"></TextBox>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btn_Order" Click="btn_Order_Click" >Add/Update</Button>
                <Button x:Name="btn_Close" Click="btn_Close_Click" >Close</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
